#!/bin/sh
# CloudWorkstation post-removal script
# This script is run after the package is removed

set -e

# Package configuration
USER="cloudworkstation"
GROUP="cloudworkstation"
HOME_DIR="/var/lib/cloudworkstation"
LOG_DIR="/var/log/cloudworkstation"
CONFIG_DIR="/etc/cloudworkstation"

case "$1" in
    purge)
        # Complete package removal - clean up everything
        
        # Stop any remaining processes
        if command -v pkill >/dev/null 2>&1; then
            pkill -u "$USER" 2>/dev/null || true
        fi
        
        # Remove system user and group (only if they exist and no other packages depend on them)
        if getent passwd "$USER" >/dev/null 2>&1; then
            deluser --system "$USER" 2>/dev/null || true
        fi
        
        if getent group "$GROUP" >/dev/null 2>&1; then
            delgroup --system "$GROUP" 2>/dev/null || true
        fi
        
        # Clean up systemd drop-in directory if empty
        if [ -d "/etc/systemd/system/cloudworkstation.service.d" ]; then
            rmdir "/etc/systemd/system/cloudworkstation.service.d" 2>/dev/null || true
        fi
        
        # Remove state and log directories (but preserve configuration)
        rm -rf "$HOME_DIR" 2>/dev/null || true
        rm -rf "$LOG_DIR" 2>/dev/null || true
        
        echo ""
        echo "CloudWorkstation has been completely removed from your system."
        echo "Configuration files in $CONFIG_DIR have been preserved."
        echo "To completely remove all data, run:"
        echo "  sudo rm -rf $CONFIG_DIR"
        echo ""
        ;;
        
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        # Package removed but configuration preserved
        # or other non-purge operations - do minimal cleanup
        ;;
        
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# Automatically added by dh_systemd_enable/11.1.6ubuntu2
if [ "$1" = "remove" ]; then
    if [ -x "/usr/bin/deb-systemd-helper" ]; then
        deb-systemd-helper mask 'cloudworkstation.service' >/dev/null || true
    fi
fi

if [ "$1" = "purge" ]; then
    if [ -x "/usr/bin/deb-systemd-helper" ]; then
        deb-systemd-helper purge 'cloudworkstation.service' >/dev/null || true
        deb-systemd-helper unmask 'cloudworkstation.service' >/dev/null || true
    fi
fi
# End automatically added section

# Automatically added by dh_systemd_start/11.1.6ubuntu2
if [ -d /run/systemd/system ]; then
    systemctl --system daemon-reload >/dev/null || true
fi
# End automatically added section

exit 0