#!/bin/bash
# Pre-push hook for CloudWorkstation
# Runs comprehensive tests before allowing push to remote

set -e

echo "ğŸš€ Running pre-push tests..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Function to check if daemon is running
is_daemon_running() {
    curl -s http://localhost:8947/api/v1/ping > /dev/null 2>&1
}

# Function to cleanup background processes
cleanup() {
    if [ -n "$DAEMON_PID" ]; then
        echo "ğŸ›‘ Stopping test daemon..."
        kill $DAEMON_PID 2>/dev/null || true
    fi
}

# Set up cleanup trap
trap cleanup EXIT

echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${BLUE}1/5 Building CloudWorkstation...${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

# Full build test
if ! make build; then
    echo -e "${RED}âŒ Build failed${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… Build successful${NC}"

echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${BLUE}2/5 Running Go tests...${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

# Run all Go tests (not just short ones)
if ! go test -timeout 2m ./...; then
    echo -e "${RED}âŒ Go tests failed${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… Go tests passed${NC}"

echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${BLUE}3/5 Running Go vet checks...${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

# Run go vet
if ! go vet ./...; then
    echo -e "${RED}âŒ Go vet found issues${NC}"
    exit 1
fi

echo -e "${GREEN}âœ… Go vet passed${NC}"

# Check if frontend exists and has tests
if [ -d "cmd/cws-gui/frontend" ] && [ -f "cmd/cws-gui/frontend/package.json" ]; then
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    echo -e "${BLUE}4/5 Running frontend tests...${NC}"
    echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
    
    cd cmd/cws-gui/frontend
    
    # Install dependencies if needed
    if [ ! -d "node_modules" ]; then
        echo "ğŸ“¦ Installing frontend dependencies..."
        npm install
    fi
    
    # Run unit tests
    if grep -q '"test:unit"' package.json; then
        echo "ğŸ§ª Running frontend unit tests..."
        if ! npm run test:unit; then
            echo -e "${RED}âŒ Frontend unit tests failed${NC}"
            cd - > /dev/null
            exit 1
        fi
    fi
    
    # Run E2E tests if daemon can be started
    if grep -q '"test:e2e"' package.json && [ -f "../../../bin/cwsd" ]; then
        echo "ğŸ§ª Running E2E tests..."
        
        # Check if daemon is already running
        if ! is_daemon_running; then
            echo "ğŸš€ Starting daemon for E2E tests..."
            ../../../bin/cwsd > /tmp/cwsd-test.log 2>&1 &
            DAEMON_PID=$!
            
            # Wait for daemon to be ready
            for i in {1..10}; do
                if is_daemon_running; then
                    break
                fi
                sleep 1
            done
            
            if ! is_daemon_running; then
                echo -e "${YELLOW}âš ï¸  Could not start daemon, skipping E2E tests${NC}"
            else
                # Run E2E tests with chromium only for speed
                if ! npx playwright test --project=chromium tests/e2e/basic.spec.js; then
                    echo -e "${RED}âŒ E2E tests failed${NC}"
                    cd - > /dev/null
                    exit 1
                fi
            fi
        else
            echo "â„¹ï¸  Daemon already running, using existing instance"
            # Run E2E tests with chromium only for speed
            if ! npx playwright test --project=chromium tests/e2e/basic.spec.js; then
                echo -e "${RED}âŒ E2E tests failed${NC}"
                cd - > /dev/null
                exit 1
            fi
        fi
    fi
    
    cd - > /dev/null
    echo -e "${GREEN}âœ… Frontend tests passed${NC}"
else
    echo -e "${YELLOW}â„¹ï¸  No frontend tests found, skipping${NC}"
fi

echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${BLUE}5/5 Running integration tests...${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"

# Run the automated test script if it exists
if [ -f "test/automated/run-tests.sh" ]; then
    echo "ğŸ§ª Running automated integration tests..."
    
    # Make sure daemon is running for integration tests
    if ! is_daemon_running; then
        if [ -z "$DAEMON_PID" ]; then
            echo "ğŸš€ Starting daemon for integration tests..."
            ./bin/cwsd > /tmp/cwsd-test.log 2>&1 &
            DAEMON_PID=$!
            
            # Wait for daemon to be ready
            for i in {1..10}; do
                if is_daemon_running; then
                    break
                fi
                sleep 1
            done
        fi
    fi
    
    if ! bash test/automated/run-tests.sh; then
        echo -e "${RED}âŒ Integration tests failed${NC}"
        exit 1
    fi
    
    echo -e "${GREEN}âœ… Integration tests passed${NC}"
fi

echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
echo -e "${GREEN}ğŸ‰ All pre-push tests passed!${NC}"
echo -e "${GREEN}Your code is ready to push.${NC}"
echo -e "${BLUE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"