#!/bin/bash
# Pre-push hook for CloudWorkstation
# Runs smoke tests before allowing push to remote

set -e

echo "🚀 Running pre-push tests..."

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Step 1: Version validation
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${BLUE}Validating version synchronization${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""

if ! ./scripts/validate-versions.sh; then
    echo -e "${RED}❌ Version mismatch detected${NC}"
    echo ""
    echo "Fix version inconsistencies before pushing."
    echo "To check versions: ./scripts/validate-versions.sh"
    echo "To skip this hook (not recommended): git push --no-verify"
    exit 1
fi

echo ""

# Step 2: Smoke tests
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${BLUE}Running smoke tests (critical path verification)${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""

# Run smoke tests
if ! make test-smoke; then
    echo -e "${RED}❌ Smoke tests failed${NC}"
    echo ""
    echo "Fix the failing tests before pushing."
    echo "To run tests manually: make test-smoke"
    echo "To skip this hook (not recommended): git push --no-verify"
    exit 1
fi

echo ""
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo -e "${GREEN}🎉 All pre-push tests passed!${NC}"
echo -e "${GREEN}Your code is ready to push.${NC}"
echo -e "${BLUE}━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━${NC}"
echo ""
echo "💡 To run comprehensive regression tests: make test-regression"