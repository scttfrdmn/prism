{
  "name": "CloudWorkstation",
  "outputfilename": "CloudWorkstation",
  "frontend": {
    "dir": "./frontend",
    "install": "npm install",
    "build": "npm run build"
  },
  "build": {
    "dir": "../../bin",
    "clean": true
  },
  "info": {
    "productName": "CloudWorkstation",
    "productVersion": "0.4.3",
    "copyright": "© 2024 CloudWorkstation. Academic Research Computing Platform.",
    "companyName": "CloudWorkstation"
  },
  "author": {
    "name": "CloudWorkstation",
    "email": "support@cloudworkstation.dev"
  },
  "nsis": {
    "languages": ["English"],
    "allowElevation": false
  },
  "linux": {
    "icon": "./build/appicon.png",
    "packageType": "deb"
  },
  "mac": {
    "dmg": {
      "title": "CloudWorkstation Installer"
    },
    "info": {
      "CFBundlePackageType": "APPL",
      "CFBundleDisplayName": "CloudWorkstation",
      "NSHumanReadableCopyright": "© 2024 CloudWorkstation. Academic Research Computing Platform.",
      "NSHighResolutionCapable": true
    }
  },
  "windows": {
    "icon": "./build/appicon.ico",
    "manifest": {
      "dpiAware": true
    }
  }
}