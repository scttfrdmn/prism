{
  "name": "cloudworkstation-gui",
  "version": "0.5.2",
  "description": "CloudWorkstation Professional GUI Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:visual": "percy exec -- playwright test --config=playwright.visual.config.js",
    "test:all": "npm run test:unit && npm run test:e2e",
    "playwright:install": "playwright install",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.json"
  },
  "devDependencies": {
    "@percy/cli": "^1.30.1",
    "@percy/playwright": "^1.0.6",
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "jsdom": "^25.0.1",
    "msw": "^2.6.4",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "cloudworkstation",
    "academic",
    "research",
    "aws",
    "gui"
  ],
  "dependencies": {
    "@cloudscape-design/components": "^3.0.1099",
    "@cloudscape-design/design-tokens": "^3.0.61",
    "@cloudscape-design/global-styles": "^1.0.45",
    "@types/react": "^19.1.15",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.4",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.9.2",
    "xterm": "^5.3.0"
  }
}
