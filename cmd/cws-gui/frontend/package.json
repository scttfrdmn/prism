{
  "name": "cloudworkstation-gui",
  "version": "0.4.3",
  "description": "CloudWorkstation Professional GUI Frontend",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:visual": "percy exec -- playwright test --config=playwright.visual.config.js",
    "test:all": "npm run test:unit && npm run test:e2e",
    "playwright:install": "playwright install"
  },
  "devDependencies": {
    "@percy/cli": "^1.30.1",
    "@percy/playwright": "^1.0.6",
    "@playwright/test": "^1.48.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    "msw": "^2.6.4",
    "vite": "^6.0.0",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "cloudworkstation",
    "academic",
    "research",
    "aws",
    "gui"
  ]
}
