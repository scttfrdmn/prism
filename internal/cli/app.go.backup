	fmt.Println()
	fmt.Printf("Daily Estimate:    $%.2f\n", result.DailyEstimate)
	fmt.Printf("Monthly Estimate:  $%.2f\n", result.MonthlyEstimate)

	if len(result.AppliedDiscounts) > 0 {
