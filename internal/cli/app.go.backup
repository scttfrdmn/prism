			}
		}
	}
	return false
}

func getServiceForPort(port int) string {
	switch port {
	case 22:
		return "SSH"
	case 80:
		return "HTTP"
	case 443:
		return "HTTPS"
	case 8787:
		return "RStudio Server"
	case 8888:
		return "Jupyter Notebook"
	case 3306:
		return "MySQL"
	case 5432:
		return "PostgreSQL"
	case 6379:
		return "Redis"
	default:
		return "Application"
	}
}

